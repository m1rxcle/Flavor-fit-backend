model RecipeStep {
    id String @id @default(cuid())

    title       String
    order       Int
    description String

    recipe   Recipe @relation(fields: [recipeId], references: [id])
    recipeId String @map("recipe_id")

    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")

    @@map("recipe_steps")
}
