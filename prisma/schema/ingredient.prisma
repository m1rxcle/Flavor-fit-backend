model Ingredient {
    id String @id @default(cuid())

    title       String
    defaultUnit Unit   @map("default_unit")

    recipes RecipeIngredient[]

    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")

    @@index(fields: [title], type: Hash)
    @@map("ingredients")
}

enum Unit {
    GRAM
    MILLILITER
    PIECE
    TEASPOON
    TABLESPOON
    CLOVES
    CUP
}
